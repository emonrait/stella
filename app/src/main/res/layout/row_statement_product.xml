<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_payment_details"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="-35dp"
        android:background="@drawable/search_utility"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_bill_type_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/product_id"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_product_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_tv_product_name_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/product_name"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_base"
                    android:layout_margin="0dp"
                    android:background="@color/stoke_color_account_detail"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_color_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/color"
                            android:textColor="@color/black"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_date_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_base"
                    android:layout_margin="0dp"
                    android:background="@color/stoke_color_account_detail"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_product_mrp_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/product_mrp"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_product_mrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_product_percentage_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/product_percentage"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_product_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height_base"
                    android:layout_margin="0dp"
                    android:background="@color/stoke_color_account_detail"
                    android:padding="0dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_product_quantity_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/product_quantity"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_product_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/divider_height_base"
                        android:layout_height="match_parent"
                        android:background="@color/stoke_color_account_detail" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/account_detail_padding_base">

                        <TextView
                            android:id="@+id/tv_add_by_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="@string/add_by"
                            android:textSize="@dimen/account_balance_label_textsize_base" />

                        <TextView
                            android:id="@+id/tv_add_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/zero"
                            android:textSize="@dimen/textsize_base" />
                    </LinearLayout>


                </LinearLayout>

            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>