<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.raihan.stella.activity.ContactActivity">

    <include layout="@layout/header_general" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/content_minus_top_base"
        android:layout_weight=".1"
        android:background="@drawable/tran"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_5">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_5"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardCornerRadius="@dimen/login_card_corner_radius_base"
                            app:cardElevation="@dimen/login_card_elevation_base">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/profile1"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:gravity="center"
                                    android:src="@drawable/logo" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_short"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="@string/contact_informatiom"
                                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_about"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableLeft="@drawable/ic_logo"
                                    android:drawablePadding="@dimen/margin_10"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/about"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/margin_30"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:lineSpacingExtra="5dp"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/about_us"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_account"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableLeft="@drawable/ic_bank"
                                    android:drawablePadding="@dimen/margin_10"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/account"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_30"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:lineSpacingExtra="5dp"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/lb_accountinfo"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableLeft="@drawable/ic_location"
                                    android:drawablePadding="@dimen/margin_10"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/address"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/margin_30"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:lineSpacingExtra="5dp"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/lb_channel_banking_address_text"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableLeft="@drawable/ic_email"
                                    android:drawablePadding="@dimen/margin_10"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/email"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/margin_30"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:lineSpacingExtra="5dp"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/lb_contact_email"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:id="@+id/tv_customer_care"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:drawableLeft="@drawable/ic_phone"
                                    android:drawablePadding="@dimen/margin_10"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/customer_care"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/margin_30"
                                    android:layout_marginBottom="@dimen/margin_10"
                                    android:lineSpacingExtra="5dp"
                                    android:paddingLeft="@dimen/input_padding_letf_base"
                                    android:paddingTop="@dimen/input_padding_top_base"
                                    android:paddingRight="@dimen/input_padding_right_base"
                                    android:paddingBottom="@dimen/input_padding_bottom_base"
                                    android:text="@string/lb_helpline"
                                    android:textColor="@android:color/black"
                                    android:textSize="@dimen/textsize_base" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="@dimen/margin_10"
                                    android:text="@string/developed_by_emon_raihan"
                                    android:textColor="@android:color/black"
                                    android:textSize="14dp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>
